<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gongyunhao.sims.AddStudentActivity">

    <EditText
        android:id="@+id/et_modify_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="姓名"/>
    <RadioGroup
        android:id="@+id/radio_modify_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_modify_student"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_boy"
            android:text="男"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_girl"
            android:text="女"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <EditText
        android:id="@+id/et_modify_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_modify_sex"
        android:hint="年级"/>

    <EditText
        android:id="@+id/et_modify_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_modify_grade"
        android:hint="学号"/>

    <EditText
        android:id="@+id/et_modify_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_modify_number"
        android:hint="专业"/>

    <com.gongyunhao.sims.FlowLayout
        android:id="@+id/flowlayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/et_modify_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.gongyunhao.sims.FlowLayout>

    <Spinner
        android:layout_marginTop="6dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:id="@+id/spinner_modify_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flowlayout">

    </Spinner>

    <Button
        android:id="@+id/btn_modify_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="确认修改"/>

</RelativeLayout>