<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gongyunhao.sims.Activity.MainActivity">
    <include layout="@layout/title_base"
        android:id="@+id/mtitle"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_student_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_delete_interest"
            android:text="删除兴趣类"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_modify_interest"
            android:text="修改兴趣类"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add_interest"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|start"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add_student"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_marginBottom="@dimen/big_spacing"
        android:layout_marginRight="@dimen/big_spacing"/>

</FrameLayout>
